<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hamburgj.strongholdfinder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.hamburgj.strongholdfinder.InfoActivity" android:screenOrientation = "locked"></activity>
        <activity android:name="com.hamburgj.strongholdfinder.ResultsActivity"
            android:screenOrientation = "locked"/>
        <activity android:name="com.hamburgj.strongholdfinder.MainActivity"
            android:screenOrientation = "locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1954375754652888~4546415446" />
    </application>

</manifest>